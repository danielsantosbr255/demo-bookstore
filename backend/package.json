{
  "name": "bookstore-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "start": "node .",
    "dev": "tsx watch src/main.ts",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "type-check": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:check": "eslint --max-warnings 0",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write --ignore-unknown",
    "test": "jest",
    "migrate": "tsx ./src/config/database/postgres/migrate.ts"
  },
  "packageManager": "pnpm@10.18.1",
  "dependencies": {
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "ua-parser-js": "^2.0.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "objectWrap": "preserve",
    "bracketSpacing": true,
    "singleAttributePerLine": false,
    "printWidth": 110,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
