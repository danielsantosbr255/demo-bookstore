{
  "name": "demo-bookstore",
  "version": "1.0.0",
  "description": "Repository to improve full stack skills with: TypeScript, NodeJS, ReactJS, SQL, Linux, Docker",
  "keywords": [
    "typescript",
    "nodejs",
    "reactjs",
    "sql",
    "linux",
    "docker"
  ],
  "author": "Daniel Santos",
  "license": "ISC",
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "test": "echo Hello, world!",
    "prepare": "husky",
    "commit": "npx czg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielsantosbr255/demo-bookstore.git"
  },
  "bugs": {
    "url": "https://github.com/danielsantosbr255/demo-bookstore/issues"
  },
  "homepage": "https://github.com/danielsantosbr255/demo-bookstore#readme",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "czg": "^1.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "semantic-release": "^24.2.7"
  },
  "lint-staged": {
    "backend/**/*.ts": [
      "pnpm --prefix backend run lint:fix",
      "pnpm --prefix backend run prettier:fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
